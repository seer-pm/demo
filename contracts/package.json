{
  "name": "@seer-pm/contracts",
  "version": "1.0.0",
  "scripts": {
    "hhf:mainnet": "npx hardhat node --fork https://eth-pokt.nodies.app --no-deploy --config mainnetforked.config.ts",
    "hhf:gnosis": "npx hardhat node --fork https://gnosis-pokt.nodies.app --port 8546 --no-deploy --config gnosisforked.config.ts",
    "hh-local-deploy": "npx hardhat deploy --network localhost && cp -r deployments/localhost/*.json deployments/hardhat && cd ../web && yarn wagmi generate",
    "verify:gnosis": "npx hardhat --network gnosis etherscan-verify --api-url https://api.gnosisscan.io",
    "verify:ethereum": "npx hardhat --network ethereum etherscan-verify",
    "lint:check": "forge fmt --check && yarn lint:sol-tests && yarn lint:sol-logic",
    "lint:fix": "forge fmt && yarn lint:sol-tests --fix && yarn lint:sol-logic --fix",
    "lint:sol-logic": "solhint -c .solhint.json 'src/*.sol' 'script/*.sol'",
    "lint:sol-tests": "solhint -c .solhint.tests.json 'test/*.sol'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-toolbox-viem": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "dotenv": "^16.4.1",
    "ethers": "^6.13.1",
    "hardhat": "^2.19.4",
    "hardhat-deploy": "^0.12.4",
    "solhint-community": "^4.0.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@cryptoalgebra/core": "^3.0.0",
    "@cryptoalgebra/integral-periphery": "^1.0.2",
    "@kleros/dispute-resolver-interface-contract": "2.0.0",
    "@kleros/erc-792": "7.0.0",
    "@kleros/ethereum-libraries": "7.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@nomicfoundation/hardhat-viem": "^1.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "hardhat-gas-reporter": "^1.0.8",
    "openzeppelin-contracts-1155-to-20": "npm:@openzeppelin/contracts@3.4.0",
    "openzeppelin-contracts-sdai-on-gnosis": "npm:@openzeppelin/contracts@5.0.2",
    "openzeppelin-solidity-conditional-tokens": "npm:openzeppelin-solidity@2.3.0",
    "solidity-coverage": "^0.8.1",
    "solmate": "^6.2.0",
    "viem": "^1.15.1"
  }
}
