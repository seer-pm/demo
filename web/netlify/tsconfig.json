{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["./functions/**/*", "../src"]
}
